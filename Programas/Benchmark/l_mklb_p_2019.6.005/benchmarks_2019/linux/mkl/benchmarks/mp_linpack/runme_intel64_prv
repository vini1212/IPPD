# For Mvapich
if [ -n "${MPIRUN_RANK}" ]
then PMI_RANK=${MPIRUN_RANK}
fi

# For OpenMPI
if [ -n "${OMPI_COMM_WORLD_RANK}" ]
then PMI_RANK=${OMPI_COMM_WORLD_RANK}
fi

export HPL_HOST_NODE=$((PMI_RANK % MPI_PER_NODE))

echo RANK=${PMI_RANK}, NODE=${HPL_HOST_NODE}

./${HPL_EXE} "$@"
